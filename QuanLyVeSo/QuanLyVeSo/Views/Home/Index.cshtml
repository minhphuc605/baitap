@{

    Layout = "~/Views/Shared/_ViewLayout.cshtml";
}




<main class="mn-inner">
    <div class="row">
        <div class="col s12">
            <div class="page-title">Quản lý loại vé số</div>
        </div>
        <div class="col s12 m12 l12">
            <div class="card">
                <div class="card-content">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons  prefix">search</i>
                                <input id="icon_prefix" type="text">
                                <label for="icon_prefix">Tìm kiếm loại vé số</label>
                            </div>
                            <div class="input-field col s2">
                                <button type="submit" class="btn btn-primary mb-2">Tìm</button>
                            </div>
                            <div class="input-field col s4">
                                <a href="Insert" class="btn btn-success green mb-2">Thêm</a>
                            </div>
                        </div>
                    </form>

                    <div class="row">

                        <table class="responsive-table">
                            <thead>
                                <tr>
                                    <th>Mã Loại</th>
                                    <th>Tên Loại</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MALOAI</td>
                                        <td>@item.TENLOAI</td>
                                        <td>
                                            <a href="Update" class="btn btn-success green mb-2"> <i class="material-icons  prefix">navigation</i> </a>
                                            <button type="submit" class="btn btn-success red mb-2"> <i class="material-icons  prefix">delete</i> </button>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</main>